<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/popup_background"
    android:elevation="8dp">


    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🎙️ Ayo Ngobrol Bareng Bot IT!"
        android:textAlignment="center"
        android:textColor="#0671B7"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        android:textIsSelectable="false"
        android:text='Ucapkan "Hello Vira" untuk mulai. 🤖' />

    <TextView
        android:id="@+id/txtInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanya apa saja soal dunia IT 💡"
        android:textColor="#67A3D9"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siap!"
        android:backgroundTint="#0671B7"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_gravity="center" />

</LinearLayout>
